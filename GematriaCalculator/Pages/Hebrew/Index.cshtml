@page
@model GematriaCalculator.Pages.Hebrew.IndexModel

@{
    ViewData["Title"] = "Hebrew Words";
}
<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Number)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Lemma)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Xlit)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Pronounce)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Description)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Standard)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Large)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Small)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.HebrewGematrias[0].Ordinal)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Models.HebrewGematria item in Model.HebrewGematrias)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Number)</td>
                        <td>@Html.DisplayFor(modelItem => item.Lemma)</td>
                        <td>@Html.DisplayFor(modelItem => item.Xlit)</td>
                        <td>@Html.DisplayFor(modelItem => item.Pronounce)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Standard)</td>
                        <td>@Html.DisplayFor(modelItem => item.Large)</td>
                        <td>@Html.DisplayFor(modelItem => item.Small)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ordinal)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>